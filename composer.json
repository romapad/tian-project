{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "A modern WordPress stack",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "preferred-install": "dist",
	"secure-http": "false"
  },
  "repositories": [
    { 
      "type": "composer",
      "url": "http://wpackagist.org"
    },
    {
      "type": "git",
      "url": "https://github.com/wp-sync-db/wp-sync-db.git"
    },
    {
      "type": "git",
      "url": "https://github.com/wp-sync-db/wp-sync-db-media-files.git"
    },
	{
      "type": "package",
      "package": {
          "name": "romapad/tian",
          "type": "wordpress-theme",
          "version": "1.0",
          "dist": {
              "type": "zip",
              "url": "http://tian.wpso.ru/app/themes/tian.zip"
          }
        }
	}
  ],
  "require": {
    "php": ">=5.4",
    "composer/installers": "~1.0.12",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "4.4.2",
    "roots/soil": "dev-master",
	"wpackagist-plugin/image-widget": "4.2.1",
	"wpackagist-plugin/cyr3lat": "3.5",
	"wpackagist-plugin/akismet": "3.1.7",
    "wpackagist-plugin/backwpup": "3.2.3",
    "wpackagist-plugin/wordpress-seo": "3.0.7",
	"wpackagist-plugin/contact-form-7": "4.4",
	"wpackagist-plugin/duplicate-post": "2.6",
	"wpackagist-plugin/types": "1.9",
	"wpackagist-plugin/mce-table-buttons": "3.2",
	"wp-sync-db/wp-sync-db": "dev-master",
	"wp-sync-db/wp-sync-db-media-files": "dev-master",
    "romapad/tian": "*"
    },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  }
}
